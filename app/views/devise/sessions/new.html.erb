<div class="form-wrapper">
  <div class="form-title">
    <h2 class="form-title-name">ログイン<h2>
  </div>  
  <%= form_with model: @user, url: session_path(@user), class: "form-wrap", local: true do |f| %>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
    <div class="form-group">
      <div class="form-label">
        <%= f.label :email, "Email（必須）", class: "form-label-name" %>
      </div> 
      <div class="form-input"> 
        <%= f.email_field :email, placeholder: "例: example@gmail.com", class: "form-input-area", id: "email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="form-label">
        <%= f.label :password, "パスワード（必須）", class: "form-label-name" %>
      </div> 
      <div class="form-input"> 
        <%= f.password_field :password, class: "form-input-area", autocomplete: "new-password", id: "password" %>
      </div>
    </div>
    <div class="form-submit">
      <%= f.submit "ログイン", class: "form-submit-btn" %>
    </div>
  <% end %>
</div>
